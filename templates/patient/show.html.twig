{% extends 'layout_show.html.twig' %}

{% block title %}{{ patient.firstName }} {{ patient.lastName }}{% endblock %}

{% block aside_header %}
    <header class="d-flex" style="align-items: center">
        <div class="avatar-default margin-right-10" style="">
            <span>{{ patient.lastName|slice(0,2)|upper }}</span>
        </div>
        <span class="title">{{  patient }}</span>
    </header>
{% endblock %}

{% block aside_nav %}
    <nav class="d-flex" style="flex-direction: column; gap: 10px; align-items:flex-start; width:100%;">
        <button class="btn-show active d-flex align-items-center" data-url="{{ path('patient_show_information', {id: patient.id}) }}">
                <i class="fa fa-address-card"></i>
                <span>Informations</span>
        </button>
        <button class="btn-show d-flex align-items-center" data-name="medical_file" data-url="{{ path('patient_show_medical_file', {id: patient.id}) }}">
                <i class="fa fa-folder-open"></i>
                <span>Dossier m√©dical</span>
        </button>
        <button class="btn-show d-flex align-items-center" data-url="{{ path('patient_show_factures', {id: patient.id}) }}">
            <i class="fa fa-file-invoice"></i>
            <span>Factures</span>
        </button>
        <button class="btn-show d-flex align-items-center" data-url="{{ path('patient_show_calendrier', {id: patient.id}) }}">
                <i class="fa fa-calendar-alt"></i>
                <span>Calendrier</span>
        </button>
    </nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('patient.show') }}
{% endblock %}
