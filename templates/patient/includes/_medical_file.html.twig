{% extends app.request.query.get('isAjax', false) ? 'layout_empty.html.twig' : 'patient/show.html.twig' %}

{% block content %}
    <header class="header__medical_file">
        <div class="d-flex align-items-center margin-bottom-10">
            <div class="d-flex align-items-center" style="width:50%">
                <label class="label__show">Nom: </label>
                <p class="header__info">{{ patient.lastName }}</p>
            </div>
            <div class="d-flex align-items-center">
                <label class="label__show">Pr√©nom: </label>
                <p class="header__info">{{ patient.firstName }}</p>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="d-flex align-items-center" style="width:50%">
                <label class="label__show">Email: </label>
                <p class="header__info">{{ patient.email }}</p>
            </div>
            <div class="d-flex align-items-center">
                <label class="label__show">Date de naissance: </label>
                <p class="header__info">{{ patient.birthdayDate|date("d/m/Y") }}</p>
            </div>
        </div>
    </header>
{% endblock %}
