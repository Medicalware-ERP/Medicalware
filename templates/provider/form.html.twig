{% extends 'base.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}

    <h4 class="title-list">
        {% if provider is defined %}
            Modifier {{ provider.name }}
        {% else %}
            Ajouter
        {% endif %}
    </h4>
    <div class="card">

        {% form_theme form 'form/form_layout.html.twig' %}

        {{ form_start(form) }}
            {{ form_rest(form) }}
            <input type="submit" value="Enregistrer">
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('provider.datatable') }}
{% endblock %}

