{% extends 'layout_show.html.twig' %}

{% block title %}Ressources humaines{% endblock %}

{% block aside_header %}
    <header class="d-flex title" style="align-items: center">
        Utilisateur "{{ user }}"
    </header>
{% endblock %}

{% block aside_nav %}
    <nav class="d-flex" style="flex-direction: column; gap: 20px">
        <button id="btn-show-user-information" class="btn-show" data-url="{{ path('app_show_user', {'id': user.id }) }}" data-name="user-show"><i class="margin-right-5 fa fa-search"></i><span>Informations</span></button>
        <button id="btn-show-user-planning" class="btn-show" data-url="{{ path('app_show_user_planning', {'id': user.id }) }}" data-name="user-planning"><i class="margin-right-5 fa fa-calendar-alt"></i> <span>Planning</span></button>
    </nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('human_resources.show') }}
{% endblock %}
