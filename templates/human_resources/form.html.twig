{% extends 'base.html.twig' %}

{% block title %}Ressources humaine{% endblock %}

{% block body %}
    <h4 class="title-list">
        {% if user is defined %}
            Modifier {{ user.firstName }}
        {% else %}
            Ajouter
        {% endif %}
    </h4>
    <div class="card">
        <div class="d-flex justify-content-center">
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <input type="submit" class="btn btn-success" value="{{ user is defined ? "Modifier" : "Ajouter" }}">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

