{% extends 'base.html.twig' %}
{% block title %}Ressources humaine{% endblock %}

{% block body %}
    <div class="container-list-users">
        <h4 class="title-list-users">
            Utilisateurs
        </h4>
        <div class="card">
            <div class="row">
                <input class="form-input-datatable" type="text" placeholder="Chercher ..." id="input-search"
                       name="search"/>
                <button class="btn btn-success"><i class="fa fa-plus"></i>Ajouter un utilisateur</button>
            </div>

            <table id="table-users" class="datatable" data-url="{{ path('users_json') }}">
                <thead>
                <tr>
                    <th>Avatar</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Tél.</th>
                    <th>Email</th>
                    <th>Profession</th>
                    <th>Actif</th>
                    <th>Détails</th>
                </tr>
                </thead>
            </table>
            <ul class="pagination">
                {% for item in 1..((total / limit)|round(0, 'ceil')) %}
                    <a class="link" data-id={{ item }}>
                        <li>{{ item }}</li>
                    </a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('human_resources.datatable') }}
{% endblock %}

