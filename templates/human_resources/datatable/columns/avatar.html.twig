
{% apply spaceless %}
    {% if user.avatar is not null %}
        <img id="img_avatar" class="avatar-default" src="{{ user.avatar ? asset('uploads/user/avatar/'~user.id~'/'~user.avatar ) }}"  alt=""/>
    {% else %}
        <div class="avatar-default {{ class|default('') }}">
            <span>{{ user.firstName|slice(0,1)|upper ~ user.lastName|slice(0,1)|upper }}</span>
        </div>
    {% endif %}
{% endapply %}