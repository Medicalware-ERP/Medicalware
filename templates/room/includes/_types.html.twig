{% extends app.request.query.get('isAjax', false) ? 'layout_empty.html.twig' : 'room/index.html.twig' %}

{% block content %}
    <div id="room-types" class="list-cards">
        <div class="d-flex justify-content-between">
            <h3>Liste des types de salle</h3>

            <a id="btn-add-room-type" class="btn btn-success">
                <i class="fa fa-plus"></i>
                Ajouter un type
            </a>
        </div>

        <div class="card-container justify-content-center">
            {% for type in roomTypes %}
                <div class="d-flex flex-column card">
                    <b>{{ type.name }}</b>
                    <div class="description">
                        {{ type.description | raw }}
                    </div>
                    <div class="d-flex justify-content-between bottom-line">
                        <div class="d-flex align-self-end font-italic">
                            #{{ type.id }}
                        </div>
                        <div class="d-flex buttons-container">
                            <a class="btn btn-primary btn-edit-room-type" data-type="{{ type.id }}">Modifier</a>

                            <a class="btn btn-danger btn-delete-room-type" data-type="{{ type.id }}">Supprimer</a>
                        </div>
                    </div>

                </div>
            {% else %}
                Aucun type trouv√©
            {% endfor %}
        </div>
    </div>

{% endblock %}