{% extends 'layout_show.html.twig' %}

{% block title %}Salle{% endblock %}

{% block aside_header %}
    <header class="d-flex" style="align-items: center">
        Salle "{{ room.label }}"
    </header>
{% endblock %}

{% block aside_nav %}
    <nav class="d-flex" style="flex-direction: column; gap: 20px">
        <button id="btn-show-room-information" class="btn-show" data-url="{{ path('show_room_information', {id: room.id}) }}" data-name="room-information"><i class="margin-right-5 fa fa-search"></i> Informations</button>
        <button id="btn-show-room-planning" class="btn-show" data-url="{{ path('show_room_planning', {id: room.id}) }}" data-name="room-planning"><i class="margin-right-5 fa fa-calendar-alt"></i> Planning</button>
    </nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('room.show') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('room.show.style') }}
{% endblock %}