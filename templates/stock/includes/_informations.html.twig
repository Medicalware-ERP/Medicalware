{% extends app.request.query.get('isAjax', false) ? 'layout_empty.html.twig' : 'stock/show.html.twig' %}

{% block content %}
    <section class="card bg-grey d-flex flex-column gap-20">
        <div class="d-flex align-items-center">
            <div class="w-50">
                <div class="d-flex align-items-center">
                    <label class="label__show">Nom: </label>
                    <small>{{ stock.equipment.name }}</small>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <label class="label__show">Référence: </label>
                <small>{{ stock.equipment.reference }}</small>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="w-50">
                <div class="d-flex align-items-center">
                    <label class="label__show">Prix: </label>
                    <small>{{ stock.equipment.price }} €</small>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <label class="label__show">Quantité: </label>
                <small>{{ stock.quantity }}</small>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="d-flex align-items-center">
                <label class="label__show" >Fournisseur: </label>
                <small>{{ stock.equipment.provider }}</small>
            </div>
        </div>
    </section>
    <hr>
    <section class="card bg-grey d-flex flex-column gap-20">
        <div class="d-flex align-items-center">
            <div class="w-50">
                <div class="d-flex align-items-center">
                    <label class="label__show">Email: </label>
                    <small>{{ stock.equipment.provider.email }}</small>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <label class="label__show">Téléphone: </label>
                <small>{{ stock.equipment.provider.phone }}</small>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="d-flex align-items-center">
                <label class="label__show">Adresse: </label>
                <small>{{ stock.equipment.provider.address }}</small>
            </div>
        </div>
    </section>
    <button class="btn btn-primary margin-top-15 center-input-submit" id="askOrder" data-url="{{ path('stock_ask_order', {id: stock.id}) }}" >Demande de commande</button>
{% endblock %}
