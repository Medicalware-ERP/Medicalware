{% extends 'base_login.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post" name="login" class="form-login">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="logo-details-form-login">
        <img class="logo-image" src="{{ asset('build/images/logo.png') }}" alt="logo"/>
        <span class="logo-name-login">MedicalWare</span>
    </div>
    <div class="field">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input-login"  autocomplete="email" autofocus required>
        <label for="inputEmail">Email</label>
    </div>
    <div class="field">
        <input type="password" name="password" id="inputPassword" class="form-input-login" autocomplete="current-password" required>
        <label for="inputPassword">Mot de passe</label>
    </div>

    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn-login" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
