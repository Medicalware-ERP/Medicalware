<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('sidebar') }}
    {% endblock %}
</head>
    <body>
       {% include "_menu.html.twig" %}
        <div class="topbar">
            <div class="wrapper">
                <i class="fas fa-bars"></i>
                <div class="profile">
                    <div class="profile-left">

                        {% if app.user.avatar is not null %}
                            <img class="avatar" src="https://cdn.pixabay.com/photo/2015/03/03/08/55/portrait-657116_960_720.jpg"  alt="avatar"/>
                            {# Todo : Affichage de l'avatar de l'utilisateur #}
                        {% else %}
                            <div class="avatar">
                                {{ app.user.firstName|first|upper ~ app.user.lastName|first|upper }}
                            </div>
                        {% endif %}

                    </div>
                    <div class="profile-right">
                        <span class="profile-username">{{ app.user.firstName ~ " " ~ app.user.lastName }}</span>
                        <small class="profile-role">{{ app.user.profession }}</small>
                    </div>
                    <div class="sub-menu-profile">
                        <span class="sub-menu-profile-title">Bienvenue !</span>
                        <div class="sub-menu-container-link">
                            <a href="#" class="sub-menu-profile-link"><i class="fa fa-user"></i>Mon profil</a>
                            <a href="#" class="sub-menu-profile-link"><i class="fas fa-sign-out-alt"></i>Déconnexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <main class="dashboard-section">
            <div class="dashboard-content">
                {% block body %}{% endblock %}
            </div>
        </main>
    </body>
</html>
